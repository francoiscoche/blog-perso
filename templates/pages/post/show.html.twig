{% extends 'base.html.twig' %}

{% block title %}Posts - Fran√ßois{% endblock %}

{% block body %}
    <section class="max-w-3xl mx-auto mt-4">
    
       <a href={{ path('app_post_show', { slug : post.slug }) }}><h2 class="font-medium post-title-post text-xl mb-1">{{ post.title }}</h2></a>
                    <div class="post-date-post text-sm italic"><i class="fas fa-calendar-days"> </i> {{ post.createdAt|date("F j, Y | g:i a") }}</div>
        <div class="post-content-post my-8">{{ post.content |raw }}</div>

		<ul class="flex flex-row post-tag-post">
			{% for tag in post.tags %}
				<li>	
					<a href="{{ path('app_tag_show', { slug : tag.slug }) }}" class="px-2">#{{ tag.name }}</a>
					{% if not loop.last %}
						<span>&nbsp;   &nbsp;</span>
					{% endif %}
				</li>
			{% endfor %}
		</ul>
    </section>
{% endblock %}
