{% extends 'base.html.twig' %}
{% block title %}Tag - Fran√ßois{% endblock %}
{% block body %}
    <section class="mt-4">
        <div class="max-w-3xl mx-auto">
            <div class="mb-8">
                <span class="link-blog">
                    <a class="link-blog-path" href={{ path('app_home') }}>Home</a>
                    <span class="text-xl"> > </span> 
                    <a class="link-blog-path" href={{ path('app_post') }}>Tags</a>
                </span> 
            </div>
            <div class="text-tag mt-4 text-xl">
                {% for tag in tags %}
                    <a href="{{ path('app_tag_show', { slug : tag.slug }) }}" class="px-2">#{{ tag.name }}</a>
                {% endfor %}
            </div>
        </div>
    </section>
{% endblock %}
