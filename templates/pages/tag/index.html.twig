{% extends 'base.html.twig' %}
{% block title %}Blog - Tag{% endblock %}
{% block body %}
    <section class="mt-4">
        <div class="max-w-3xl mx-auto">
            <div class="mb-8">
                <span class="font-bold">
                    <a href={{ path('app_home') }}>Home</a>
                    <span class="text-xl"> > </span>
                    <a href={{ path('app_post') }}>Tags</a>
                </span>
            </div>
            <div class="mt-4 text-xl font-semibold">
                {% for tag in tags %}
                    <a href="{{ path('app_tag_show', { slug : tag.slug }) }}" class="pr-4">#{{ tag.name }}</a>
                {% endfor %}
            </div>
        </div>
    </section>
{% endblock %}
