<!DOCTYPE html>
<html lang="it">
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
        <link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text></svg>">
        {% block stylesheets %}
            {{ encore_entry_link_tags('app') }}
                <link rel="preconnect" href="https://fonts.googleapis.com"><link rel="preconnect" href="https://fonts.gstatic.com" crossorigin><link href="https://fonts.googleapis.com/css2?family=Open+Sans:wght@300;400;500;600;700;800&display=swap" rel="stylesheet">
                <link href="{{ asset('bundles/ckeditor_custom/plugins/codesnippet/lib/highlight/styles/monokai_sublime.css') }}" rel="stylesheet">
        {% endblock %}
        {% block javascripts %}
            {{ encore_entry_script_tags('app') }}
            <script src="{{ asset('bundles/ckeditor_custom/plugins/codesnippet/lib/highlight/highlight.pack.js') }}"></script>
            <script>
                hljs.initHighlightingOnLoad();
            </script>
        {% endblock %}
    </head>
    <body class="overflow-y-scroll dark:text-white dark:bg-slate-700">
        <div class="flex flex-col h-screen justify-between">
            <div>
                {% include "partials/_header.html.twig" %}
                <script>
                    const html = document.querySelector("html");

                    if (localStorage.theme === 'dark' || (!('theme' in localStorage) && window.matchMedia('(prefers-color-scheme: dark)').matches)) {
                        html.classList.add("dark")
                        document.getElementById("flexSwitchCheckChecked").checked = true;
                    } else {
                        html.classList.remove("dark");
                        document.getElementById("flexSwitchCheckChecked").checked = false;
                    }
                </script>
                {% block body %}{% endblock %}
            </div>
            {% include "partials/_footer.html.twig" %}
        </div>
    </body>
</html>
